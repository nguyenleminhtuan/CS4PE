@model IEnumerable<DMQuyetTien.Models.BangSanPham>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách sản phẩm</h2>

<p>
    @Html.ActionLink("Tạo sản phẩm", "Create")
</p>

    <table id="bangsanpham" class="table table-condensed table-bordered table-hover table-responsive table-striped ">
        <thead>
            <tr class="table danger">
                <th class="">
                    Mã SP
                </th>
                <th>
                    Tên SP
                </th>
                <th>
                    Giá Bán
                </th>
                <th>
                    Giá Gốc
                </th>
                <th>
                    Giá Góp
                </th>
                <th>
                    Số lượng tồn
                </th>
                <th>
                    Tên loại
                </th>
                <th>Hình sản phẩm</th>
                <th></th>
            </tr>
        </thead>
<tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @item.MaSP
            </td>
            <td>
                @item.TenSP
            </td>
            <td>
                @item.GiaBan.ToString("N0")
            </td>
            <td>
                @item.GiaGoc.ToString("N0")
            </td>
            <td>
                @item.GiaGop.ToString("N0")
            </td>
            <td>
                @item.SoLuongTon.ToString("N0")
            </td>
            <td>
                @item.LoaiSanPham.TenLoai
            </td>
            <td>
                <img src="@Url.Action("Details", new { id = item.id })" width="150" height="100" />
            </td>
            <td align="center">
                <a title="Sửa" href="@Url.Action("Edit",new { id = item.id } )">
                <span class =" glyphicon glyphicon-pencil"></span>
                </a>
                <a href="@Url.Action("Details",new { id = item.id } )">
                    <span class=" glyphicon glyphicon-search"></span>
                </a>
                <a href="@Url.Action("Delete",new { id = item.id } )">
                    <span class=" glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
    }
</tbody>
    </table>

    @section scripts{
        <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />

        <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#bangsanpham').DataTable();
            });
        </script>
   
}